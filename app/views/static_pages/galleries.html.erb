<% provide(:title, 'Galleries') %>
<h3>Upload your photos**</h3>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div> 
  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Ability Matrimony</h1>

    <h2>
      Here you can upload your recent photos to be viewed by other users.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>

<p>** Photos should not contain any explicit content ,Otherwise your account will be deleted by Admin</p>